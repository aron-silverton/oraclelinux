{
  "variables": {
    "version": "0.1.0",
    "cm": "nocm",
    "cm_version": "",
    "cleanup_pause": "",
    "headless": "",
    "iso_url": "http://mirrors.dotsrc.org/oracle-linux/EL5/U8/i386/OracleLinux-R5-U8-Server-i386-dvd.iso",
    "iso_checksum": "e9f58baa2fc3cbd55e9b484d50071a9d",
    "update": "false",
    "http_proxy": "{{env `http_proxy`}}",
    "https_proxy": "{{env `https_proxy`}}",
    "ftp_proxy": "{{env `ftp_proxy`}}",
    "rsync_proxy": "{{env `rsync_proxy`}}",
    "no_proxy": "{{env `no_proxy`}}"
  },
  "builders": [{
    "vm_name": "oel58-i386",
    "type": "vmware-iso",
    "guest_os_type": "oraclelinux",
    "http_directory": "http",
    "iso_url": "{{ user `iso_url` }}",
    "iso_checksum": "{{ user `iso_checksum` }}",
    "iso_checksum_type": "md5",
    "ssh_username": "vagrant",
    "ssh_password": "vagrant",
    "ssh_wait_timeout": "10000s",
    "headless": "{{ user `headless` }}",
    "tools_upload_flavor": "linux",
    "boot_command": [
      "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort}}/ks5.cfg<enter>"
    ],
    "shutdown_command": "echo 'vagrant'|sudo -S /sbin/shutdown -h now",
    "disk_size": 10140,
    "vmx_data": {
      "memsize": "512",
      "numvcpus": "1",
      "cpuid.coresPerSocket": "1"
    }
  },
  {
    "vm_name": "oel58-i386",
    "type": "virtualbox-iso",
    "http_directory": "http",
    "iso_url": "{{ user `iso_url` }}",
    "iso_checksum": "{{ user `iso_checksum` }}",
    "iso_checksum_type": "md5",
    "guest_os_type": "RedHat",
    "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
    "virtualbox_version_file": ".vbox_version",
    "ssh_username": "vagrant",
    "ssh_password": "vagrant",
    "ssh_wait_timeout": "10000s",
    "headless": "{{ user `headless` }}",
    "boot_command": [
      "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort}}/ks5.cfg<enter>"
    ],
    "shutdown_command": "echo 'vagrant'|sudo -S /sbin/shutdown -h now",
    "disk_size": 10140,
    "vboxmanage": [
      ["modifyvm", "{{.Name}}", "--memory", "512"],
      ["modifyvm", "{{.Name}}", "--cpus", "1"]
    ]
  },
  {
    "vm_name": "oel58-i386",
    "type": "parallels-iso",
    "http_directory": "http",
    "iso_url": "{{ user `iso_url` }}",
    "iso_checksum": "{{ user `iso_checksum` }}",
    "iso_checksum_type": "md5",
    "parallels_tools_flavor": "lin",
    "guest_os_type": "redhat",
    "prlctl_version_file": ".prlctl_version",
    "ssh_username": "vagrant",
    "ssh_password": "vagrant",
    "ssh_wait_timeout": "10000s",
    "boot_command": [
      "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort}}/ks5.cfg<enter>"
    ],
    "shutdown_command": "echo 'vagrant'|sudo -S /sbin/shutdown -h now",
    "disk_size": 10140,
    "prlctl": [
      ["set", "{{.Name}}", "--memsize", "512"],
      ["set", "{{.Name}}", "--cpus", "1"]
    ]
  }],
  "provisioners": [{
    "type": "shell",
    "environment_vars": [
      "CM={{user `cm`}}",
      "CM_VERSION={{user `cm_version`}}",
      "CLEANUP_PAUSE={{user `cleanup_pause`}}",
      "UPDATE={{user `update`}}",
      "http_proxy={{user `http_proxy`}}",
      "https_proxy={{user `https_proxy`}}",
      "ftp_proxy={{user `ftp_proxy`}}",
      "rsync_proxy={{user `rsync_proxy`}}",
      "no_proxy={{user `no_proxy`}}"
    ],
    "execute_command": "echo 'vagrant' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
    "scripts": [
      "script/kernel.sh",
      "script/fix-slow-dns.sh",
      "script/sshd.sh",
      "script/update.sh",
      "script/vagrant.sh",
      "script/vmtool.sh",
      "script/cmtool.sh",
      "script/cleanup.sh"
    ]
  }],
  "post-processors": [{
    "type": "vagrant",
    "keep_input_artifact": false,
    "output": "box/{{.Provider}}/oel58-i386-{{user `cm`}}{{user `cm_version`}}-{{user `version`}}.box"
  }]
}
