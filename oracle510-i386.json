{
  "variables": {
    "cm": "nocm",
    "cm_version": "",
    "cm_set_path": "",
    "cleanup_pause": "",
    "iso_url": "iso/V40140-01.iso",
    "iso_checksum": "5a9216dd69f17b9dd8f64ed539629741"
  },
  "builders": [{
    "vm_name": "oracle510-i386",
    "type": "vmware-iso",
    "guest_os_type": "oraclelinux",
    "http_directory": "http",
    "iso_url": "{{ user `iso_url` }}",
    "iso_checksum": "{{ user `iso_checksum` }}",
    "iso_checksum_type": "md5",
    "ssh_username": "vagrant",
    "ssh_password": "vagrant",
    "ssh_wait_timeout": "10000s",
    "tools_upload_flavor": "linux",
    "boot_command": [
      "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort}}/ks5.cfg<enter>"
    ],
    "shutdown_command": "echo 'vagrant'|sudo -S /sbin/shutdown -h now",
    "disk_size": 10140,
    "vmx_data": {
      "memsize": "512",
      "numvcpus": "1",
      "cpuid.coresPerSocket": "1"
    }
  },
  {
    "vm_name": "oracle510-i386",
    "type": "virtualbox-iso",
    "http_directory": "http",
    "iso_url": "{{ user `iso_url` }}",
    "iso_checksum": "{{ user `iso_checksum` }}",
    "iso_checksum_type": "md5",
    "guest_os_type": "RedHat",
    "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
    "virtualbox_version_file": ".vbox_version",
    "ssh_username": "vagrant",
    "ssh_password": "vagrant",
    "ssh_wait_timeout": "10000s",
    "boot_command": [
      "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort}}/ks5.cfg<enter>"
    ],
    "shutdown_command": "echo 'vagrant'|sudo -S /sbin/shutdown -h now",
    "disk_size": 10140,
    "vboxmanage": [
      ["modifyvm", "{{.Name}}", "--memory", "512"],
      ["modifyvm", "{{.Name}}", "--cpus", "1"]
    ]
  }],
  "provisioners": [{
    "type": "shell",
    "environment_vars": [
      "CM={{user `cm`}}",
      "CM_VERSION={{user `cm_version`}}",
      "CM_SET_PATH={{user `cm_set_path`}}",
      "CLEANUP_PAUSE={{user `cleanup_pause`}}"
    ],
    "execute_command": "echo 'vagrant' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
    "scripts": [
      "script/kernel.sh",
      "script/fix-slow-dns.sh",
      "script/sshd.sh",
      "script/vagrant.sh",
      "script/vmtool.sh",
      "script/cmtool.sh",
      "script/cleanup.sh"
    ]
  }],
  "post-processors": [{
    "type": "vagrant",
    "keep_input_artifact": false,
    "output": "box/{{.Provider}}/oracle510-i386-{{user `cm`}}{{user `cm_version`}}.box"
  }]
}
